<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/step_heigh_and_width"
        tools:style="@style/CardView"
        android:layout_gravity="center"
        android:layout_margin="@dimen/cardview_margin"
        card_view:cardCornerRadius="@dimen/carview_radius">

        <LinearLayout
            android:id="@+id/ll_step_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/selected_raw">

            <ImageView
                android:id="@+id/iv_step_thumb"
                android:layout_width="@dimen/step_heigh_and_width"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_height="@dimen/step_heigh_and_width"
                android:cropToPadding="true"/>

            <TextView
                android:id="@+id/tv_step_short_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/step_heigh_and_width"
                android:gravity="center_vertical|center_horizontal"
                android:textAlignment="center"
                android:textSize="@dimen/textsize_h1" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>