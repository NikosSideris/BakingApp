<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"

>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_height"
        tools:style="@style/CardView"
        android:layout_gravity="center"
        android:layout_margin="@dimen/cardview_margin"
        card_view:cardCornerRadius="@dimen/carview_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iv_recipe_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/recipe_image_content_description"
                android:maxHeight="@dimen/cardview_image_height" />

            <TextView
                android:id="@+id/tv_recipe_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cardview_text_height"
                android:layout_below="@+id/iv_recipe_image"
                android:baselineAligned="false"
                android:gravity="center_vertical|center_horizontal"
                android:text="Test=test=test"
                android:textAlignment="center"
                android:textSize="@dimen/textsize_h1" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

